<div class="container">
    <div class="row">
        <div class="offset-md-3 col-md-6">

             
            <h1><%= title %></h1>
               
                                                                                         
            <form class="form" method="POST">
            
                <input type="hidden" name="id" value="<%= bcontact._id %>" >
                    <div class="form-group">
                    <label for="nameTextField">Name</label>
                    <input type="text" class="form-control"
                    id="nameTextField"
                    placeholder="Enter the contact's name"
                    name="name" 
                    value="<%= bcontact.name %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="numberTextField">Number</label>
                    <input type="number" class="form-control"
                    id="numberTextField"
                    placeholder="Enter contact's phone number"
                    name="number" 
                    value="<%= bcontact.number %>"
                    required>
                </div>

                <div class="form-group">
                    <label for="emailTextField">Email</label>
                    <input type="text" class="form-control"
                    id="emailTextField"
                    placeholder="Enter the contact's email adress"
                    name="email" 
                    value="<%= bcontact.email %>"
                    required>
                </div>

                </input>
                </div>

                
                <button class="btn btn-primary btn-lg" type="submit">
                    <i class="fas fa-edit"></i> Submit</button>
                
                    <a href="/list" class="btn btn-warning btn-lg">
                        <i class="fas fa-undo"></i> Cancel</a>
                       
            </form>
       
        </div>
    
    </div>
</div>

